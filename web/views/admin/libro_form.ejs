<%- include('../partials/header') %>

<main class="container">
    <div class="form-container">
        <h1><%= pageTitle %></h1>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- El formulario envía los datos a la misma ruta actual de la Web -->
        <form action="<%= book ? '/books/admin/edit/' + book.id : '/books/admin/new' %>" method="POST">
            
            <div class="form-group">
                <label for="title">Título</label>
                <input type="text" id="title" name="title" value="<%= book ? book.title : '' %>" required>
            </div>

            <div class="form-group">
                <label for="description">Descripción</label>
                <textarea id="description" name="description" rows="4"><%= book ? book.description : '' %></textarea>
            </div>

            <div class="form-group">
                <label for="isbn">ISBN</label>
                <input type="text" id="isbn" name="isbn" value="<%= book ? book.isbn : '' %>" required>
            </div>

            <div class="form-group">
                <label for="price">Precio (€)</label>
                <input type="number" id="price" name="price" step="0.01" value="<%= book ? book.price : '' %>" required>
            </div>

            <div class="form-group">
                <label for="stock">Stock</label>
                <input type="number" id="stock" name="stock" value="<%= book ? book.stock : 0 %>" required>
            </div>

            <div class="form-group">
                <label for="author_id">Autor</label>
                <select id="author_id" name="author_id" class="form-control">
                    <% allAuthors.forEach(function(author) { %>
                        <option value="<%= author.id %>" <%= book && book.author_id === author.id ? 'selected' : '' %>><%= author.name %></option>
                    <% }); %>
                </select>
            </div>

             <div class="form-group">
                <label for="publisher_id">Editorial</label>
                <select id="publisher_id" name="publisher_id" class="form-control">
                    <% publishers.forEach(function(publisher) { %>
                        <option value="<%= publisher.id %>" <%= book && book.publisher_id === publisher.id ? 'selected' : '' %>><%= publisher.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group">
                <label for="genre_id">Género</label>
                <select id="genre_id" name="genre_id" class="form-control">
                    <% allGenres.forEach(function(genre) { %>
                        <option value="<%= genre.id %>" <%= book && book.genre_id === genre.id ? 'selected' : '' %>><%= genre.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group">
                <label for="cover_url">URL de Portada</label>
                <input type="text" id="cover_url" name="cover_url" value="<%= book ? book.cover_url : '' %>">
            </div>

            <div class="form-footer">
                <button type="submit" class="btn btn-primary">Guardar Libro</button>
                <a href="/books" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</main>

<%- include('../partials/footer') %>
